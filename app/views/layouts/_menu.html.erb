<% if menu.has_children? %>
  <div class="ui dropdown item">
    <%= menu.name %>
    <div class="menu">
      <%= render partial: 'layouts/menu', collection: menu.children, as: :menu %>
    </div>
  </div>
<% else %>
  <%= link_to menu.name, menu.path, method: :get, class: menu.active?(@active_path) ? 'active item' : 'item' %>  
<% end -%>