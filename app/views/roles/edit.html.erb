<h1>Editing Role</h1>

<%= form_for(@role, html: { class: 'ui form' }) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :superior_id %>
    <%= f.select :superior_id, options_for_select(@superiors_roles.map{|r|[r.name, r.id]}), include_blank: true %>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'ui green button' %>
  </div>
<% end %>

<%= link_to 'Show', @role, class: 'ui button' %> |
